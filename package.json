{
  "name": "use-ref-state",
  "version": "0.0.2",
  "description": "Combine useRef and useState hook",
  "repository": "https://github.com/tuckerconnelly/use-ref-state",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --write 'src/**/*.js'",
    "lint": "eslint 'src/**/*.js'"
  },
  "devDependencies": {
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^13.1.0",
    "prettier": "^1.17.1",
    "test-listen": "^1.1.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": 0
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "npm run prettier -- ",
        "npm run lint -- ",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm ci"
    }
  }
}
